        const grid = document.getElementById('idiom-grid');
        const toggleBtn = document.getElementById('toggle-all-btn');
        let allVisible = false;

        idioms.forEach(item => {
            const card = document.createElement('div');
            card.className = 'card h-28 md:h-32 bg-transparent cursor-pointer group';
            
            card.innerHTML = `
                <div class="card-inner shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                    <div class="card-front bg-white p-4 text-3xl md:text-4xl">
                        ${item.puzzle}
                    </div>
                    <div class="card-back bg-amber-500 p-2 text-white text-2xl md:text-3xl font-semibold">
                        ${item.answer}
                    </div>
                </div>
            `;

            card.addEventListener('click', () => {
                card.classList.toggle('is-flipped');
            });

            grid.appendChild(card);
        });

        toggleBtn.addEventListener('click', () => {
            allVisible = !allVisible;
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                if (allVisible) {
                    card.classList.add('is-flipped');
                } else {
                    card.classList.remove('is-flipped');
                }
            });
            toggleBtn.textContent = allVisible ? 'éšè—æ‰€æœ‰ç­”æ¡ˆ' : 'æ˜¾ç¤ºæ‰€æœ‰ç­”æ¡ˆ';
        });

    </script>
